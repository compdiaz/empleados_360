<mvc:View
    controllerName="empleados360.controller.App"
    
        xmlns="sap.m"
    		xmlns:form="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
		xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"

>
    <Shell id="shell">
        <App>
            <Page title="{i18n>title}" titleAlignment="Center" enableScrolling="false" showFooter="true" showHeader="true" >

          <content>
          <ToolbarSpacer />
						<Wizard id="CrearEmpleadoWizard" width="auto" renderMode="{i18n>modoVer}" class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
								complete="wizardCompletedHandler">
                              	<WizardStep id="EmpleadoTypeStep1"
                                        title="{i18n>wizardStep1}"
										validated="false">
                                        	<MessageStrip class="sapUiSmallMarginBottom"
										text="Complete los datos obligatorios para continuar"
										showIcon="true"/>

                                        <FormattedText class="sapUiSmallMarginBottom"
               htmlText="{i18n>html}"							/>
								<HBox
										alignItems="Center"
										justifyContent="Center"
										width="100%">
									<SegmentedButton
										width="320px"
										selectionChange="CrearEmpleadoStep2">
										<items>
											<SegmentedButtonItem  text="{i18n>autonomo}" press="onPressPaso2"/>
											<SegmentedButtonItem text="{i18n>interno}" press="onPressPaso2"/>
											<SegmentedButtonItem  text="{i18n>gerente}" press="onPressPaso2" />
                                           
										</items>
									</SegmentedButton>
								</HBox>

							</WizardStep>
							<WizardStep id="CrearEmpleadoStep2"
										validated="true"
										title="{i18n>wizardStep2}"
										activate="additionalInfoValidation">
								<MessageStrip class="sapUiSmallMarginBottom"
										text="Complete los datos obligatorios para continuar "
										showIcon="true"/>
								<form:SimpleForm
										editable="true"
										layout="ResponsiveGridLayout">
									<Label text="Nombre" required="true"/>
									<Input valueStateText="Enter 6 symbols or more"
											valueState="{/productNameState}" id="EmpleadoName" liveChange="additionalInfoValidation"
											placeholder="Enter name with length greater than 6" value="{/productName}"/>
									<Label text="Apellidos" required="true"/>
									<Input valueStateText="Enter digits"
											valueState="{/productWeightState}" id="EmpleadoWeight"
											liveChange="additionalInfoValidation" type="Number" placeholder="Enter digits"
											value="{/productWeight}"/>
									<Label text="Dni" required="true"/>
									<Input valueStateText="Ingrese número de dni"
											valueState="{/productWeightState}" id="EmpleadoDni"
											liveChange="additionalInfoValidation"  placeholder="Ingrese número de dni"
											value="{/productWeight}"/>
	<Label text="Salario Bruto Anual"/>
			<Slider width="80%" class="sapUiTinyMargin" change="handleChange" value="24000" min="12000" max="80000" step="3" enableTickmarks="true" labelInterval="2"></Slider>

<Label text="Fecha Incorporación" labelFor="DP1"/>
				<DatePicker
					id="DP1"
					placeholder="Ingrese Fecha"
					change="handleChange"
					class="sapUiSmallMarginBottom"/>

								</form:SimpleForm>
							</WizardStep>
                            <WizardStep id="InformaStep"
										validated="false"
										 title="{i18n>wizardStep3}"
										activate="additionalInfoValidation">
								<MessageStrip class="sapUiSmallMarginBottom"
										text="Introduce datos complementarios, sino de al botón verificar "
										showIcon="true"/>
									<form:SimpleForm
										editable="true"
										layout="ResponsiveGridLayout">
									<Label text="Comentario"/>
									<TextArea value="{/productDescription}" rows="3" />
                                   
								</form:SimpleForm>
                                <ToolbarSpacer/>
                                <FlexBox alignItems="End" justifyContent="End" width="100%">
                <items>
                   <Button icon="sap-icon://accounting-document-verification" type="Transparent" width="auto"></Button>
                </items>
            </FlexBox>
                                
							</WizardStep>
                            	</Wizard>
					</content>

            <Panel>
             
            	<OverflowToolbar id="otb2">
			
		<ToolbarSpacer/>
     
		<Button text="Cancelar" press="cancel"   type="Transparent"/>
        
	</OverflowToolbar>
    
            </Panel>
                <content />
            </Page>
			
        </App>
    </Shell>
</mvc:View>
