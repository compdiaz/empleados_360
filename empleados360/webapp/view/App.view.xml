<mvc:View
    controllerName="empleados360.controller.App"
    
        xmlns="sap.m"
    		xmlns:form="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
		xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"

>
    <Shell id="shell">
        <App>
            <Page title="{i18n>title}" titleAlignment="Center" enableScrolling="false" showFooter="true"  
>
<Panel>
          <content>
          <ToolbarSpacer />
						<Wizard id="CreateProductWizard" width="auto" renderMode="{i18n>modoVer}" class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
								complete="wizardCompletedHandler">
                              	<WizardStep id="ProductTypeStep"
                                        title="{i18n>wizardStep1}"
										validated="true">
                                        	<MessageStrip class="sapUiSmallMarginBottom"
										text="Complete los datos obligatorios para continuar"
										showIcon="true"/>

                                        <FormattedText class="sapUiSmallMarginBottom"
               htmlText="{i18n>html}"							/>
								<HBox
										alignItems="Center"
										justifyContent="Center"
										width="100%">
									<SegmentedButton
										width="320px"
										selectionChange="ProductInfoStep">
										<items>
											<SegmentedButtonItem  text="{i18n>autonomo}" press="onPress"/>
											<SegmentedButtonItem text="{i18n>interno}" press="onPress"/>
											<SegmentedButtonItem  text="{i18n>gerente}" press="onPress" />
                                            
										</items>
									</SegmentedButton>
								</HBox>
							</WizardStep>
							<WizardStep id="ProductInfoStep"
										validated="true"
										title="{i18n>wizardStep2}"
										activate="additionalInfoValidation">
								<MessageStrip class="sapUiSmallMarginBottom"
										text="Complete los datos obligatorios para continuar "
										showIcon="true"/>
								<form:SimpleForm
										editable="true"
										layout="ResponsiveGridLayout">
									<Label text="Nombre" required="true"/>
									<Input valueStateText="Enter 6 symbols or more"
											valueState="{/productNameState}" id="EmpleadoName" liveChange="additionalInfoValidation"
											placeholder="Enter name with length greater than 6" value="{/productName}"/>
									<Label text="Apellidos" required="true"/>
									<Input valueStateText="Enter digits"
											valueState="{/productWeightState}" id="EmpleadoWeight"
											liveChange="additionalInfoValidation" type="Number" placeholder="Enter digits"
											value="{/productWeight}"/>
									<Label text="Dni" required="true"/>
									<Input valueStateText="Ingrese número de dni"
											valueState="{/productWeightState}" id="EmpleadoDni"
											liveChange="additionalInfoValidation"  placeholder="Ingrese número de dni"
											value="{/productWeight}"/>
	<Label text="Salario Bruto Anual"/>
			<Slider width="80%" class="sapUiTinyMargin" change="handleChange" value="24000" min="12000" max="80000" step="3" enableTickmarks="true" labelInterval="2"></Slider>

<Label text="Fecha Incorporación" labelFor="DP1"/>
				<DatePicker
					id="DP1"
					placeholder="Ingrese Fecha"
					change="handleChange"
					class="sapUiSmallMarginBottom"/>

								</form:SimpleForm>
							</WizardStep>
                            <WizardStep id="InformaStep"
										validated="false"
										 title="{i18n>wizardStep3}"
										activate="additionalInfoValidation">
								<MessageStrip class="sapUiSmallMarginBottom"
										text="Validation in the wizard is controlled by calling the validateStep(Step) and invalidateStep(Step) methods "
										showIcon="true"/>
								<Text text="Cras tellus leo, volutpat vitae ullamcorper eu, posuere malesuada nisl. Integer pellentesque leo sit amet dui vehicula, quis ullamcorper est pulvinar. Nam in libero sem. Suspendisse arcu metus, molestie a turpis a, molestie aliquet dui. Donec pulvinar, sapien et viverra imperdiet, orci erat porttitor nulla, eget commodo metus nibh nec ipsum. Aliquam lacinia euismod metus, sollicitudin pellentesque purus volutpat eget. Pellentesque egestas erat quis eros convallis mattis. Mauris hendrerit sapien a malesu corper eu, posuere malesuada nisl. Integer pellentesque leo sit amet dui vehicula, quis ullamcorper est pulvinar. Nam in libero sem. Suspendisse arcu metus, molestie a turpis a, molestie aliquet dui. Donec pulvinar, sapien	corper eu, posuere malesuada nisl. Integer pellentesque leo sit amet dui vehicula, quis ullamcorper est pulvinar. Nam in libero sem. Suspendisse arcu metus, molestie a turpis a, molestie aliquet dui. Donec pulvinar, sapien	"/>
								<form:SimpleForm
										editable="true"
										layout="ResponsiveGridLayout">
									<Label text="Name" required="true"/>
									<Input valueStateText="Enter 6 symbols or more"
											valueState="{/productNameState}" id="ProductName" liveChange="additionalInfoValidation"
											placeholder="Enter name with length greater than 6" value="{/productName}"/>
									<Label text="Weight" required="true"/>
									<Input valueStateText="Enter digits"
											valueState="{/productWeightState}" id="ProductWeight"
											liveChange="additionalInfoValidation" type="Number" placeholder="Enter digits"
											value="{/productWeight}"/>
									<Label text="Manufacturer"/>
									<Select selectedKey="{/productManufacturer}">
										<core:Item key="Apple" text="Apple"/>
										<core:Item key="Microsoft" text="Microsoft"/>
										<core:Item key="Google" text="Google"/>
										<core:Item key="Sony" text="Sony"/>
										<core:Item key="Samsung" text="Samsung"/>
										<core:Item key="Logitech" text="Logitech"/>
									</Select>
									<Label text="Description"/>
									<TextArea value="{/productDescription}" rows="8"/>
								</form:SimpleForm>
							</WizardStep>
                            	</Wizard>
					</content>
</Panel>
            <Panel>
             
            	<OverflowToolbar id="otb2">
			
		<ToolbarSpacer/>
     
		<Button text="Cancelar" press="cancel"   type="Transparent"/>
        
	</OverflowToolbar>
    
            </Panel>
                <content />
            </Page>
        </App>
    </Shell>
</mvc:View>
